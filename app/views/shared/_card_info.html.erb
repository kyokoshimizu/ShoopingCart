<% if !CardInfo.find_by(order_id: @order.id) %>
	<% self_information = SelfInformation.find_by(member_id: @order.member_id) %>
	<% card_info = CardInfo.find_by(self_information_id: self_information.id) %>
<% else %>
	<% card_info = @order.card_info %>
<% end %>
<%= field_set_tag 'カード情報' do %>
　カード番号：<%= card_info.card_num %><br>
　有効期限：<%= card_info.deadline %>月　<%= CardInfo.get_deadline2(card_info.deadline2) %>年<br>
　支払区分：<%= CardInfo.get_times(card_info.times) %><br>
　セキュリティコード：<%= card_info.code %><br>
<% end %>
<br>
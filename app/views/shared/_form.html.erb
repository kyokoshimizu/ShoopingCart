<% if @member.self_information.errors.any? %>
	<div id="error_explanation">
		<ul>
		<% @member.self_information.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<%= fields_for @member.self_information do |af| %>
	<div class="field">
		<%= af.label :name, "NAME" %>
		<%= af.text_field :name %>
	</div>
	<br>
	<div class="field">
		<%= af.label :address, "ADDRESS" %>
		<%= af.label :postal, "〒" %>
		<%= af.text_field :postal %>		
		<%= af.text_field :address %>
	</div>
	<br>
	<div class="field">
		<%= af.label :payment_method, "PAYMENT" %>
		<%= af.select(:payment_method,
		 { '着払い' => 1, '銀行振込' => 2, 'カード払い' => 3 },
		 { include_blank: '選択してください'} ,
		 {id: 'info'}) %>
	</div>

	<div id='card_info'>
	</div>
	<br>

	<script type="text/javascript">
		$(document).ready(function(){
			$('#info').change(function(){
				var num = $('#info').val();
				if(num == 3){
					$.get("<%= new_card_info_path %>")
				}else{
					$('#card_info').html("ここだぜ！");
				}
			});
		});
	</script>

	<div class="field">
		<%= af.label :phone_number, "PHONE_NUMBER" %>
		<%= af.text_field :phone_number %>
	</div>
<% end %>